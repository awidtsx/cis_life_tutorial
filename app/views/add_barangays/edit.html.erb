<h1>Editing add barangay</h1>

<%= form_with(model: @add_barangay, local: true) do |f| %>
<div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
</div>
<div class="mb-3">
<%= f.label :add_municipal_id, "Municipal", class: "form-label" %>


  <%= f.collection_select(
:add_municipal_id,
AddMunicipal.order(:name),
:id,
:name,
{ prompt: "Select Municipal" },
{
class: "form-select",
data: { controller: "tom-select" }
}
) %>
</div>
<div class="mb-3">
    <%= f.submit "Create Barangay", class: "btn btn-primary" %>

</div>
<% end %>

<br>

<div>
  <%= link_to "Show this add barangay", @add_barangay %> |
  <%= link_to "Back to add barangays", add_barangays_path %>
</div>
