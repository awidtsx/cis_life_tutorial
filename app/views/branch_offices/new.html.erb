<h1>New branch office</h1>

<%= form_with(model: @branch_office, local: true) do |f| %>
<div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
</div>
<div class="mb-3">
<%= f.label :territory_id, "Cooperative", class: "form-label" %>


  <%= f.collection_select(
:territory_id,
Territory.order(:name),
:id,
:name,
{ prompt: "Select Territory" },
{
class: "form-select",
data: { controller: "tom-select" }
}
) %>
</div>
<div class="mb-3">
    <%= f.submit "Create Branch Office", class: "btn btn-primary" %>

</div>
<% end %>

<br>

<div>
  <%= link_to "Back to branch offices", branch_offices_path %>
</div>
