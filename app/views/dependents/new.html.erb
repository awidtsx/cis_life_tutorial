<h1>New dependent</h1>

<%= form_with(model: @dependent, local: true) do |f| %>
<div class="mb-3">
    <%= f.label :last_name, class: "form-label" %>
    <%= f.text_field :last_name, autofocus: true, class: "form-control", required: true %>
</div>

<div class="mb-3">
    <%= f.label :first_name, class: "form-label" %>
    <%= f.text_field :first_name, autofocus: true, class: "form-control", required: true %>
</div>

<div class="mb-3">
    <%= f.label :middle_name, class: "form-label" %>
    <%= f.text_field :middle_name, autofocus: true, class: "form-control", required: true %>
</div>

<div class="mb-3">
    <%= f.label :birthdate, class: "form-label" %>
    <%= f.date_field :birthdate, autofocus: true, class: "form-control", required: true %>
</div>

<div class="mb-3">
    <%= f.label :gender, class: "form-label" %>
    <%= f.select :birthdate, ["Male", "Female"], prompt:"Select Gender", class: "form-control", required: true %>
</div>

<div class="mb-3">
<%= f.label :relationship_id, "Relationship", class: "form-label" %>


  <%= f.collection_select(
:relationship_id,
Relationship.order(:relationship),
:id,
:relationship,
{ prompt: "Select Relationship" },
{
class: "form-select",
data: { controller: "tom-select" }
}
) %>
</div>

<div class="mb-3">
<%= f.label :individual_id, "Relationship", class: "form-label" %>


  <%= f.collection_select(
:individual_id,
Individual.order(:last_name),
:id,
:last_name,
{ prompt: "Select Individual" },
{
class: "form-select",
data: { controller: "tom-select" }
}
) %>
</div>
<div class="mb-3">
    <%= f.submit "Create Dependent", class: "btn btn-primary" %>

</div>
<% end %>

<br>

<div>
  <%= link_to "Back to dependents", dependents_path %>
</div>
