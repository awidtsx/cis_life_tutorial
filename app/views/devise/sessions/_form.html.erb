<%= form_for(resource, as: :user, url: session_path(:user)) do |f| %>
  <div class="mb-3"> 
    <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true, required: true %> 
  </div> 
  <div class="mb-3">
    <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
  </div>
  
  <%= f.submit "Sign In", class: "btn btn-primary w-100" %>
<% end %>