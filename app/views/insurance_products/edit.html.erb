<div class="container mt-4">
  <div class="mb-3">
    <%= link_to "â† Back to insurance products", insurance_products_path, class: "text-decoration-none" %>
  </div>

  <div class="card">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">Edit Insurance Product</h2>
    </div>
    <div class="card-body">
      <%= form_with(model: @insurance_product, local: true) do |f| %>
        <% if @insurance_product.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h4><%= pluralize(@insurance_product.errors.count, "error") %> prohibited this insurance product from being saved:</h4>
            <ul class="mb-0">
              <% @insurance_product.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :name, class: "form-label fw-bold" %>
          <%= f.text_field :name, autofocus: true, class: "form-control", required: true, placeholder: "Enter product name" %>
          <small class="form-text text-muted">Provide a clear and descriptive name for the insurance product</small>
        </div>

        <div class="mb-3">
          <%= f.label :description, class: "form-label fw-bold" %>
          <%= f.text_area :description, class: "form-control", required: true, rows: 4, placeholder: "Enter product description" %>
          <small class="form-text text-muted">Describe the features and benefits of this insurance product</small>
        </div>

        <div class="field mb-3">
          <%= f.label :product_type, "Product Type", class: "form-label fw-bold" %>
          <%= f.select :product_type,
                InsuranceProduct.product_types.values,
                { prompt: "Select product type" },
                class: "tom-select" %>
          <small class="form-text text-muted">Choose whether this is an individual or group insurance product</small>
        </div>

        <div class="mt-4">
          <%= f.submit "Update Insurance Product", class: "btn btn-primary" %>
          <%= link_to "Cancel", insurance_products_path, class: "btn btn-tertiary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "View details", @insurance_product, class: "text-decoration-none" %>
  </div>
</div>