<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary fw-bold">Insurance Products</h1>
    <%= link_to "New Insurance Product", new_insurance_product_path, class: "btn btn-primary" %>
  </div>

  <div class="card">
    <div class="card-body">
      <% if @insurance_products.empty? %>
        <div class="text-center py-5">
          <p class="text-muted mb-3">No insurance products found</p>
          <%= link_to "Create your first insurance product", new_insurance_product_path, class: "btn btn-primary" %>
        </div>
      <% else %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-primary">
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Product Type</th>
                <th>Created At</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @insurance_products.each do |insurance_product| %>
                <tr>
                  <td><%= insurance_product.id %></td>
                  <td><strong><%= insurance_product.name %></strong></td>
                  <td><%= truncate(insurance_product.description, length: 50) %></td>
                  <td><span class="badge bg-secondary"><%= insurance_product.product_type %></span></td>
                  <td><%= insurance_product.created_at.strftime("%B %d, %Y") %></td>
                  <td class="text-end">
                    <%= link_to "View", insurance_product, class: "btn btn-sm btn-outline-primary" %>
                    <%= link_to "Edit", edit_insurance_product_path(insurance_product), class: "btn btn-sm btn-outline-secondary" %>
                    <%= button_to "Delete", insurance_product, method: :delete, 
                        data: { confirm: "Are you sure you want to delete this insurance product?" }, 
                        class: "btn btn-sm btn-outline-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>