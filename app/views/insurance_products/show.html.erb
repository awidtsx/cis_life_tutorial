<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="mb-3">
    <%= link_to "â† Back to insurance products", insurance_products_path, class: "text-decoration-none" %>
  </div>

  <div class="card">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">Insurance Product Details</h2>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-8 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title text-primary mb-3">Product Information</h5>
              <p class="mb-3">
                <strong>Name:</strong><br>
                <span class="fs-5"><%= @insurance_product.name %></span>
              </p>
              <p class="mb-3">
                <strong>Description:</strong><br>
                <%= @insurance_product.description %>
              </p>
              <p class="mb-0">
                <strong>Product Type:</strong><br>
                <span class="badge bg-secondary fs-6"><%= @insurance_product.product_type %></span>
              </p>
            </div>
          </div>
        </div>

        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title text-primary mb-3">Metadata</h5>
              <p class="mb-2">
                <strong>Product ID:</strong><br>
                <span class="text-muted">#<%= @insurance_product.id %></span>
              </p>
              <p class="mb-2">
                <strong>Created At:</strong><br>
                <span class="text-muted"><%= @insurance_product.created_at.strftime("%B %d, %Y") %></span>
              </p>
              <p class="mb-0">
                <strong>Last Updated:</strong><br>
                <span class="text-muted"><%= @insurance_product.updated_at.strftime("%B %d, %Y") %></span>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-4 d-flex gap-2">
        <%= link_to "Edit this insurance product", edit_insurance_product_path(@insurance_product), class: "btn btn-primary" %>
        <%= link_to "Back to insurance products", insurance_products_path, class: "btn btn-secondary" %>
        <%= button_to "Delete this insurance product", @insurance_product, method: :delete,
            data: { confirm: "Are you sure you want to delete this insurance product?" },
            class: "btn btn-tertiary" %>
      </div>
    </div>
  </div>
</div>