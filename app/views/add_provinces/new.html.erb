<h1>New add province</h1>
<%= form_with(model: @add_province, local: true) do |f| %>
<div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
</div>
<div class="mb-3">
<%= f.label :add_region_id, "Region", class: "form-label" %>


  <%= f.collection_select(
:add_region_id,
AddRegion.order(:name),
:id,
:name,
{ prompt: "Select Region" },
{
class: "form-select",
data: { controller: "tom-select" }
}
) %>
</div>
<div class="mb-3">
    <%= f.submit "Create Province", class: "btn btn-primary" %>

</div>
<% end %>
<br>

<div>
  <%= link_to "Back to add provinces", add_provinces_path %>
</div>
