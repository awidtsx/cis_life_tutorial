<div class="sidebar" style="width: 280px; height: 100vh; background: linear-gradient(180deg, #F9CB25 0%, #F5C518 100%); box-shadow: 2px 0 10px rgba(0,0,0,0.1); overflow-y: auto;">
  
  <!-- Header -->
  <div style="padding: 24px 24px 16px;">
    <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 8px;">
      <div style="width: 40px; height: 40px; background-color: #1a1a1a; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
        <div style="width: 32px; height: 32px; background-color: #F9CB25; border-radius: 50%; position: relative;">
          <div style="position: absolute; top: 0; right: 0; width: 20px; height: 20px; background-color: #1a1a1a; border-radius: 50%;"></div>
        </div>
      </div>
      <h3 style="font-size: 24px; font-weight: 700; color: #1a1a1a; margin: 0;">CIS Life</h3>
    </div>
    <hr style="border: none; height: 1px; background-color: rgba(0,0,0,0.15); margin-top: 16px;">
  </div>

  <!-- Navigation -->
  <nav style="padding: 0 16px 24px;">
    
    <!-- Dashboard -->
    <ul style="list-style: none; padding: 0; margin: 0 0 24px 0;">
      <li>
        <%= link_to authenticated_root_path, class: "nav-link", style: "display: flex; align-items: center; gap: 12px; padding: 10px 12px; border-radius: 8px; color: #1a1a1a; text-decoration: none; font-weight: 500; font-size: 14px; transition: all 0.2s;" do %>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="3" width="7" height="7"></rect>
            <rect x="14" y="3" width="7" height="7"></rect>
            <rect x="14" y="14" width="7" height="7"></rect>
            <rect x="3" y="14" width="7" height="7"></rect>
          </svg>
          <span>Dashboard</span>
        <% end %>
      </li>
    </ul>

    <!-- Insurance Section -->
    <div style="margin-bottom: 24px;">
      <div style="padding: 0 12px 8px; display: flex; align-items: center; gap: 8px;">
        <span style="font-size: 11px; font-weight: 700; color: #4a4a4a; letter-spacing: 0.5px;">INSURANCE</span>
      </div>
      <ul style="list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 4px;">
        <li>
          <%= link_to agreement_contracts_path, class: "nav-link", style: "display: flex; align-items: center; gap: 12px; padding: 10px 12px; border-radius: 8px; color: #1a1a1a; text-decoration: none; font-weight: 500; font-size: 14px; transition: all 0.2s;" do %>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
            <span>Agreements</span>
          <% end %>
        </li>
        <li>
          <%= link_to insurance_products_path, class: "nav-link", style: "display: flex; align-items: center; gap: 12px; padding: 10px 12px; border-radius: 8px; color: #1a1a1a; text-decoration: none; font-weight: 500; font-size: 14px; transition: all 0.2s;" do %>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="16.5" y1="9.4" x2="7.5" y2="4.21"></line>
              <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
              <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
              <line x1="12" y1="22.08" x2="12" y2="12"></line>
            </svg>
            <span>Products</span>
          <% end %>
        </li>
        <li>
          <%= link_to insurance_groups_path, class: "nav-link", style: "display: flex; align-items: center; gap: 12px; padding: 10px 12px; border-radius: 8px; color: #1a1a1a; text-decoration: none; font-weight: 500; font-size: 14px; transition: all 0.2s;" do %>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
            <span>Group Contracts</span>
          <% end %>
        </li>
        <li>
          <%= link_to insurance_groups_path, class: "nav-link", style: "display: flex; align-items: center; gap: 12px; padding: 10px 12px; border-radius: 8px; color: #1a1a1a; text-decoration: none; font-weight: 500; font-size: 14px; transition: all 0.2s;" do %>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
            <span>Group Assessments</span>
          <% end %>
        </li>
      </ul>
    </div>

    <!-- Cooperative Section -->
    <div style="margin-bottom: 24px;">
      <div style="padding: 0 12px 8px; display: flex; align-items: center; gap: 8px;">
        <span style="font-size: 11px; font-weight: 700; color: #4a4a4a; letter-spacing: 0.5px;">COOPERATIVE</span>
      </div>
      <ul style="list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 4px;">
        <li>
          <%= link_to cooperatives_path, class: "nav-link", style: "display: flex; align-items: center; gap: 12px; padding: 10px 12px; border-radius: 8px; color: #1a1a1a; text-decoration: none; font-weight: 500; font-size: 14px; transition: all 0.2s;" do %>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
              <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
            <span>Cooperative</span>
          <% end %>
        </li>
        <li>
          <%= link_to coop_memberships_path, class: "nav-link", style: "display: flex; align-items: center; gap: 12px; padding: 10px 12px; border-radius: 8px; color: #1a1a1a; text-decoration: none; font-weight: 500; font-size: 14px; transition: all 0.2s;" do %>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
            <span>Memberships</span>
          <% end %>
        </li>
      </ul>
    </div>

    <!-- Users Section -->
    <div style="margin-bottom: 24px;">
      <div style="padding: 0 12px 8px; display: flex; align-items: center; gap: 8px;">
        <span style="font-size: 11px; font-weight: 700; color: #4a4a4a; letter-spacing: 0.5px;">USERS</span>
      </div>
      <ul style="list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 4px;">
        <li>
          <%= link_to individuals_path, class: "nav-link", style: "display: flex; align-items: center; gap: 12px; padding: 10px 12px; border-radius: 8px; color: #1a1a1a; text-decoration: none; font-weight: 500; font-size: 14px; transition: all 0.2s;" do %>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            <span>Producers</span>
          <% end %>
        </li>
        <li>
          <%= link_to individuals_path, class: "nav-link", style: "display: flex; align-items: center; gap: 12px; padding: 10px 12px; border-radius: 8px; color: #1a1a1a; text-decoration: none; font-weight: 500; font-size: 14px; transition: all 0.2s;" do %>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
              <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
            </svg>
            <span>Roles</span>
          <% end %>
        </li>
      </ul>
    </div>

    <!-- Management Section -->
    <div style="margin-bottom: 24px;">
      <div style="padding: 0 12px 8px; display: flex; align-items: center; gap: 8px;">
        <span style="font-size: 11px; font-weight: 700; color: #4a4a4a; letter-spacing: 0.5px;">MANAGEMENT</span>
      </div>
      <ul style="list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 4px;">
        <li>
          <%= link_to individuals_path, class: "nav-link", style: "display: flex; align-items: center; gap: 12px; padding: 10px 12px; border-radius: 8px; color: #1a1a1a; text-decoration: none; font-weight: 500; font-size: 14px; transition: all 0.2s;" do %>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            <span>Individuals</span>
          <% end %>
        </li>
        <li>
          <%= link_to individuals_path, class: "nav-link", style: "display: flex; align-items: center; gap: 12px; padding: 10px 12px; border-radius: 8px; color: #1a1a1a; text-decoration: none; font-weight: 500; font-size: 14px; transition: all 0.2s;" do %>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <span>Branches</span>
          <% end %>
        </li>
        <li>
          <%= link_to individuals_path, class: "nav-link", style: "display: flex; align-items: center; gap: 12px; padding: 10px 12px; border-radius: 8px; color: #1a1a1a; text-decoration: none; font-weight: 500; font-size: 14px; transition: all 0.2s;" do %>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <circle cx="12" cy="12" r="6"></circle>
              <circle cx="12" cy="12" r="2"></circle>
            </svg>
            <span>Departments</span>
          <% end %>
        </li>
      </ul>
    </div>

  </nav>
</div>

<style>
  .nav-link:hover {
    background-color: rgba(0, 0, 0, 0.1) !important;
  }
</style>