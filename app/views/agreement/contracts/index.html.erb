<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary fw-bold">Contracts</h1>
    <%= link_to "New Contract", new_agreement_contract_path, class: "btn btn-primary" %>
  </div>

  <div class="card">
    <div class="card-body">
      <% if @agreement_contracts.empty? %>
        <div class="text-center py-5">
          <p class="text-muted mb-3">No contracts found</p>
          <%= link_to "Create your first contract", new_agreement_contract_path, class: "btn btn-primary" %>
        </div>
      <% else %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-primary">
              <tr>
                <th>ID</th>
                <th>Type</th>
                <th>Contractable</th>
                <th>Insurance Product</th>
                <th>Created At</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @agreement_contracts.each do |agreement_contract| %>
                <tr>
                  <td><%= agreement_contract.id %></td>
                  <td>
                    <span class="badge <%= agreement_contract.contractable_type == 'Cooperative' ? 'bg-primary' : 'bg-secondary' %>">
                      <%= agreement_contract.contractable_type %>
                    </span>
                  </td>
                  <td><strong><%= agreement_contract.contractable_name %></strong></td>
                  <td><%= agreement_contract.insurance_product&.name || 'N/A' %></td>
                  <td><%= agreement_contract.created_at.strftime("%B %d, %Y") %></td>
                  <td class="text-end">
                    <%= link_to "View", agreement_contract, class: "btn btn-sm btn-outline-primary" %>
                    <%= link_to "Edit", edit_agreement_contract_path(agreement_contract), class: "btn btn-sm btn-outline-secondary" %>
                    <%= button_to "Delete", agreement_contract, method: :delete, 
                        data: { confirm: "Are you sure you want to delete this contract?" }, 
                        class: "btn btn-sm btn-outline-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>