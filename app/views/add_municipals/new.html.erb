<h1>New add municipal</h1>

<%= form_with(model: @add_municipal, local: true) do |f| %>
<div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
</div>
<div class="mb-3">
<%= f.label :add_province_id, "Province", class: "form-label" %>


  <%= f.collection_select(
:add_province_id,
AddProvince.order(:name),
:id,
:name,
{ prompt: "Select Province" },
{
class: "form-select",
data: { controller: "tom-select" }
}
) %>
</div>
<div class="mb-3">
    <%= f.submit "Create Municipal", class: "btn btn-primary" %>

</div>
<% end %>

<br>

<div>
  <%= link_to "Back to add municipals", add_municipals_path %>
</div>
