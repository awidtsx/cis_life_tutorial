<div class="container-fluid">

  <!-- USER INFORMATION CARD -->
  <div class="card shadow-sm mb-4">
    <div class="card-header text-white" style="background-color:#A80F21;">
      <strong>Current User Information</strong>
    </div>

    <div class="card-body">
      <div class="row align-items-start">
        <!-- LEFT: USER DETAILS -->
        <div class="col-md-8">
          <h5 class="fw-bold mb-3">JOHN DOE</h5>

          <div class="row mb-2">
            <div class="col-md-6">
              <small class="text-muted">Username</small>
              <div>—</div>
            </div>
            <div class="col-md-6">
              <small class="text-muted">Email</small>
              <div>placeholder@email.com</div>
            </div>
          </div>

          <div class="row mb-2">
            <div class="col-md-6">
              <small class="text-muted">Gender</small>
              <div>—</div>
            </div>
            <div class="col-md-6">
              <small class="text-muted">Birth Date</small>
              <div>—</div>
            </div>
          </div>
        </div>

        <!-- RIGHT: ORGANIZATION DETAILS -->
        <div class="col-md-4">
          <div class="card bg-light border-0">
            <div class="card-body">
              <h6 class="fw-bold mb-3">Organization Details</h6>

              <div class="mb-2">
                <small class="text-muted">Organization Type</small>
                <div>—</div>
              </div>

              <div>
                <small class="text-muted">Last Sign In</small>
                <div>—</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- STATS CARDS -->
  <div class="row mb-4">
    <% stats = [
      ["Sign In Count", "#002C88"],
      ["Account Age", "#031249"],
      ["Role Level", "#002C88"],
      ["Status", "#031249"]
    ] %>

    <% stats.each do |title, color| %>
      <div class="col-md-3">
        <div class="card text-white mb-3" style="background-color:<%= color %>;">
          <div class="card-body">
            <h6 class="text-uppercase small"><%= title %></h6>
            <h3 class="fw-bold mb-0">—</h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- CERTIFICATE OVERVIEW -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h5 class="fw-bold">Certificate Overview</h5>
      <p class="text-muted mb-4">Quick summary of all insurance certificates</p>

      <div class="row text-center mb-3">
        <div class="col-md-3">
          <h3 style="color:#002C88;">15</h3>
          <small>Total Certificates</small>
        </div>
        <div class="col-md-3">
          <h3 style="color:#031249;">7</h3>
          <small>Active</small>
        </div>
        <div class="col-md-3">
          <h3 style="color:#002C88;">2</h3>
          <small>Total Sum Assured</small>
        </div>
        <div class="col-md-3">
          <h3 style="color:#031249;">4</h3>
          <small>Total Premium</small>
        </div>
      </div>

      <div class="text-center">
        <%= link_to "View All Certificates", "#", class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>

  <!-- SYSTEM MODULES -->
  <div class="mb-4">
    <h5 class="fw-bold">System Modules</h5>
    <p class="text-muted">Access all system modules and data management pages</p>

    <div class="row g-4">
      <%= render "dashboard/system_module_card",
          title: "Insurance",
          color: "#002C88",
          items: ["Certificates", "Group Contracts", "Perils", "Products"] %>

      <%= render "dashboard/system_module_card",
          title: "Agreement",
          color: "#031249",
          items: ["Contracts", "Coverages", "Eligibilities", "Relationships", "Rates"] %>

      <%= render "dashboard/system_module_card",
          title: "User Management",
          color: "#002C88",
          items: ["Producers", "Permissions", "Roles", "Resources"] %>

      <%= render "dashboard/system_module_card",
          title: "Address",
          color: "#031249",
          items: ["Regions", "Provinces", "Municipalities", "Barangays"] %>

      <%= render "dashboard/system_module_card",
          title: "Cooperative",
          color: "#002C88",
          items: ["Registries", "Branches", "Memberships", "Employees", "Types"] %>

      <%= render "dashboard/system_module_card",
          title: "General",
          color: "#031249",
          items: ["Individuals", "Dependents", "Relationship Types", "Departments", "Branches", "Territories"] %>
    </div>
  </div>

</div>
