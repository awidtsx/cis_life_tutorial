<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="mb-3">
    <%= link_to "â† Back to cooperatives", cooperatives_path, class: "text-decoration-none", style: "color: #CCCCCC;" %>
  </div>

  <div class="card">
    <div class="card-header text-white" style="background-color: #002C88;">
      <h2 class="mb-0">Cooperative Details</h2>
      <small class="text-white-50">Cooperative #<%= @cooperative.id %></small>
    </div>
    <div class="card-body">
      <!-- Basic Information -->
      <div class="row mb-4">
        <div class="col-md-8">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title" style="color: #002C88;">Basic Information</h5>
              <p class="mb-2">
                <strong>Name:</strong><br>
                <span class="fs-4 fw-bold" style="color: #031249;"><%= @cooperative.name %></span>
              </p>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title" style="color: #002C88;">Statistics</h5>
              <p class="mb-2">
                <strong>Total Members:</strong><br>
                <span class="fs-5 fw-bold" style="color: #F9CB25;"><%= @cooperative.coop_memberships.count %></span>
              </p>
              <p class="mb-0">
                <strong>Contracts:</strong><br>
                <span class="fs-5 fw-bold" style="color: #002C88;"><%= @cooperative.contracts.count %></span>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Location Information -->
      <div class="card mb-4" style="border: 2px solid #F9CB25;">
        <div class="card-header" style="background-color: #F9CB25; color: #031249;">
          <h5 class="mb-0 fw-bold">Location Information</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-3 mb-3">
              <div class="p-3 rounded text-center" style="background-color: #FDFDFD; border: 1px solid #CCCCCC;">
                <small style="color: #031249;">Region</small>
                <h6 class="mb-0 fw-bold" style="color: #002C88;">
                  <%= @cooperative.region&.name || 'N/A' %>
                </h6>
              </div>
            </div>
            <div class="col-md-3 mb-3">
              <div class="p-3 rounded text-center" style="background-color: #FDFDFD; border: 1px solid #CCCCCC;">
                <small style="color: #031249;">Province</small>
                <h6 class="mb-0 fw-bold" style="color: #002C88;">
                  <%= @cooperative.province&.name || 'N/A' %>
                </h6>
              </div>
            </div>
            <div class="col-md-3 mb-3">
              <div class="p-3 rounded text-center" style="background-color: #FDFDFD; border: 1px solid #CCCCCC;">
                <small style="color: #031249;">Municipal</small>
                <h6 class="mb-0 fw-bold" style="color: #002C88;">
                  <%= @cooperative.municipal&.name || 'N/A' %>
                </h6>
              </div>
            </div>
            <div class="col-md-3 mb-3">
              <div class="p-3 rounded text-center" style="background-color: #FDFDFD; border: 1px solid #CCCCCC;">
                <small style="color: #031249;">Barangay</small>
                <h6 class="mb-0 fw-bold" style="color: #002C88;">
                  <%= @cooperative.barangay&.name || 'N/A' %>
                </h6>
              </div>
            </div>
          </div>
          <div class="mt-2">
            <strong>Complete Address:</strong><br>
            <span class="text-muted">
              <%= [@cooperative.barangay&.name, @cooperative.municipal&.name, @cooperative.province&.name, @cooperative.region&.name].compact.join(', ') %>
            </span>
          </div>
        </div>
      </div>

      <!-- Members Section -->
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #031249; color: #FDFDFD;">
          <h5 class="mb-0">Cooperative Members</h5>
          <%= link_to "Add Member", new_coop_membership_path(cooperative_id: @cooperative.id), class: "btn btn-sm", style: "background-color: #F9CB25; color: #031249;" %>
        </div>
        <div class="card-body">
          <% members = @cooperative.coop_memberships.includes(:individual) %>
          <% if members.empty? %>
            <div class="text-center py-4">
              <p class="text-muted mb-3">No members yet</p>
              <%= link_to "Add First Member", new_coop_membership_path(cooperative_id: @cooperative.id), class: "btn text-white", style: "background-color: #002C88;" %>
            </div>
          <% else %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead style="background-color: #FDFDFD; color: #031249;">
                  <tr>
                    <th>Member ID</th>
                    <th>Full Name</th>
                    <th>Birth Date</th>
                    <th>Gender</th>
                    <th>Membership Date</th>
                    <th class="text-end">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% members.each do |membership| %>
                    <tr>
                      <td>#<%= membership.id %></td>
                      <td><strong><%= membership.individual&.full_name || 'N/A' %></strong></td>
                      <td><%= membership.individual&.birth_date&.strftime("%m/%d/%Y") || 'N/A' %></td>
                      <td><%= membership.individual&.gender || 'N/A' %></td>
                      <td><%= membership.membership_date&.strftime("%m/%d/%Y") || 'N/A' %></td>
                      <td class="text-end">
                        <%= link_to "View", membership, class: "btn btn-sm", style: "background-color: #002C88; color: #FDFDFD;" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Agreement Contracts Section -->
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #002C88; color: #FDFDFD;">
          <h5 class="mb-0">Agreement Contracts</h5>
          <%= link_to "Create Contract", new_agreement_contract_path(contractable_type: 'Cooperative', contractable_id: @cooperative.id), class: "btn btn-sm", style: "background-color: #F9CB25; color: #031249;" %>
        </div>
        <div class="card-body">
          <% contracts = @cooperative.contracts.includes(:insurance_product) %>
          <% if contracts.empty? %>
            <div class="text-center py-4">
              <p class="text-muted mb-3">No agreement contracts yet</p>
              <%= link_to "Create First Contract", new_agreement_contract_path(contractable_type: 'Cooperative', contractable_id: @cooperative.id), class: "btn text-white", style: "background-color: #002C88;" %>
            </div>
          <% else %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead style="background-color: #FDFDFD; color: #031249;">
                  <tr>
                    <th>Contract ID</th>
                    <th>Insurance Product</th>
                    <th>Product Type</th>
                    <th>Created At</th>
                    <th class="text-end">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% contracts.each do |contract| %>
                    <tr>
                      <td>#<%= contract.id %></td>
                      <td><strong><%= contract.insurance_product&.name || 'N/A' %></strong></td>
                      <td>
                        <span class="badge" style="background-color: #F9CB25; color: #031249;">
                          <%= contract.insurance_product&.product_type || 'N/A' %>
                        </span>
                      </td>
                      <td><%= contract.created_at.strftime("%B %d, %Y") %></td>
                      <td class="text-end">
                        <%= link_to "View", contract, class: "btn btn-sm", style: "background-color: #002C88; color: #FDFDFD;" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Metadata -->
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title" style="color: #002C88;">Record Information</h5>
          <div class="row">
            <div class="col-md-4">
              <strong>Cooperative ID:</strong><br>
              <span class="text-muted">#<%= @cooperative.id %></span>
            </div>
            <div class="col-md-4">
              <strong>Created At:</strong><br>
              <span class="text-muted"><%= @cooperative.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
            </div>
            <div class="col-md-4">
              <strong>Last Updated:</strong><br>
              <span class="text-muted"><%= @cooperative.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-4 d-flex gap-2">
        <%= link_to "Edit this cooperative", edit_cooperative_path(@cooperative), class: "btn text-white", style: "background-color: #002C88;" %>
        <%= link_to "Back to cooperatives", cooperatives_path, class: "btn text-white", style: "background-color: #CCCCCC; color: #031249;" %>
        <%= button_to "Delete this cooperative", @cooperative, method: :delete,
            data: { confirm: "Are you sure you want to delete this cooperative?" },
            class: "btn text-white", style: "background-color: #A80F21;" %>
      </div>
    </div>
  </div>
</div>